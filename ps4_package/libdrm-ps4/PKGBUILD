# Maintainer: TigerClips1 <spongebob1966@proton.me>

pkgbase=ps4-libdrm
pkgname=ps4-libdrm
pkgver=2.4.120
pkgrel=1
pkgdesc="Userspace interface to kernel DRM services"
url="https://dri.freedesktop.org/"
arch=(x86_64)
license=('MIT')
depends=('libpciaccess' 'glibc')
makedepends=('python-docutils' 'meson')
checkdepends=('cairo')
optdepends=('cairo: needed for modetest tool')
replaces=('libdrm-new' 'libdrm-nouveau')
source=(https://dri.freedesktop.org/libdrm/libdrm-2.4.120.tar.xz
        https://raw.githubusercontent.com/Dr4kk3N/ps4-overlay/main/x11-libs/libdrm/files/libdrm-9999.patch
        libdrm-9999.patch
        )
sha512sums=('SKIP'
            'SKIP'
            'SKIP')

prepare(){
    mv libdrm-2.4.120  ps4-libdrm-2.4.120
    cd $pkgbase-$pkgver
    patch -Np1 -i ../libdrm-9999.patch
}

build() {
  arch-meson $pkgbase-$pkgver build \
    -D udev=false \
    -D etnaviv=disabled \
    -D freedreno=disabled \
    -D vc4=disabled \
    -D valgrind=disabled \
    -D install-test-programs=true
  meson compile -C build
}

check() {
  meson test -C build --print-errorlogs
}

package() {
  meson install -C build --destdir "$pkgdir"
}
