#Mantainer TigerClips1 <TigerClips1@ps4repo.site>
pkgname=zlib
pkgver=1.3.1
pkgrel=1
pkgdesc="The Zlib package contains compression and decompression routines used by some programs."
arch=("x86_64")
url="https://www.linuxfromscratch.org/lfs/downloads/stable-systemd/LFS-BOOK-12.1-systemd-NOCHUNKS.html#ch-system-man-pages"
license=("zlib")

source=("https://ftp.osuosl.org/pub/lfs/lfs-packages/12.1/zlib-1.3.1.tar.gz")

sha256sums=("SKIP")

prepare() {
    cd $pkgname-$pkgver
    ./configure --prefix=/usr
}

build() {
    make
}

check() {
    make check
}

package() {
   make DESTDIR=$pkgdir install
   rm -fv $pkgdir/usr/lib/libz.a
}
