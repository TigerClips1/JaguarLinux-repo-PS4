#Mantainer TigerClips1 <TigerClips1@ps4repo.site>
pkgname=m4
pkgver=1.4.19
pkgrel=1
pkgdesc=" The M4 package contains a macro processor. "
arch=("x86_64")
url="https://www.linuxfromscratch.org/lfs/downloads/stable-systemd/LFS-BOOK-12.1-systemd-NOCHUNKS.html#ch-system-man-pages"
license=("GPL")

source=("https://ftp.osuosl.org/pub/lfs/lfs-packages/12.1/m4-1.4.19.tar.xz")

sha256sums=("SKIP")

prepare() {
    ./configure --prefix=/usr
}

build() {
   make
}

check() {
    make check
}

package() {
   cd $pkgname-$pkgver
   make DESTDIR=$pkgdir install
}