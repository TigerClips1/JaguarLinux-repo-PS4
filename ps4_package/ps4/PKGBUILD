# Maintainer: TigerClips1 <TigerClips1@ps4repo.site>

pkgname=ps4
pkgver=1.0
pkgrel=0
pkgdesc="A ps4 package manager Base off of pacman"
arch=('x86_64')
url="https://github.com/TigerClips1"
license=('GPL-2.0-or-later')
depends=('bash' 'glibc' 'libarchive' 'curl' 'gpgme'
         'gettext' 'gawk' 'coreutils' 'gnupg' 'grep')
makedepends=('meson' 'asciidoc' 'doxygen')
checkdepends=('python' 'fakechroot')
optdepends=('perl-locale-gettext: translation support in makepkg-template')
provides=('libalpm.so')
backup=(etc/ps4.conf
        etc/makepkg.conf)
options=('strip')
source=(https://github.com/TigerClips1/ps4linux-package-manager/archive/refs/tags/ps4V1.0.1-8.tar.gz
        ps4V1.0.1-8.tar.gz
)
sha256sums=('SKIP'
            'SKIP'
           )

prepare() {
    mv -v ps4linux-package-manager-ps4V1.0.1-8 ${pkgname}-${pkgver}
}

build() {
  cd ${pkgname}-${pkgver}

  meson --prefix=/usr \
        --buildtype=plain \
        -Ddoc=disabled \
        -Ddoxygen=enabled \
        -Dscriptlet-shell=/usr/bin/bash \
        -Dldconfig=/usr/bin/ldconfig \
        build

  meson compile -C build
}


package() {
  cd "$pkgname-$pkgver"

  DESTDIR="$pkgdir" meson install -C build

  # install ps4linux specific stuff
  install -dm755 "$pkgdir/etc"


  local wantsdir="$pkgdir/usr/lib/systemd/system/sockets.target.wants"
  install -dm755 "$wantsdir"

  local unit
  for unit in dirmngr gpg-agent gpg-agent-{browser,extra,ssh} keyboxd; do
    ln -s "../${unit}@.socket" "$wantsdir/${unit}@etc-ps4.d-gnupg.socket"
  done
}

