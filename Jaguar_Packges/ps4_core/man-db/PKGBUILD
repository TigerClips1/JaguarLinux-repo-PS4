# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="man-db"
VERSION="2.12.1"
UPSTREAM=1
DESC="The Man-DB package contains programs for finding and viewing man pages."
GRPS=("core")
URL="https://man-db.nongnu.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/man-db-2.12.1.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr                         \
            --docdir=/usr/share/doc/man-db-2.12.1 \
            --sysconfdir=/etc                     \
            --disable-setuid                      \
            --enable-cache-owner=bin              \
            --with-browser=/usr/bin/lynx          \
            --with-vgrind=/usr/bin/vgrind         \
            --with-grap=/usr/bin/grap
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make
    return 0
}
function check() {
    cd $WORKDIR/$NAME-$VERSION
    make check
    return 0
}


# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION
   make DESTDIR=${BUILD_DATA_ROOT} install

   return 0
}
