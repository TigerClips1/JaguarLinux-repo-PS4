# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="psmisc"
VERSION="23.7s"
UPSTREAM=1
DESC="The Psmisc package contains programs for displaying information about running processes."
GRPS=("core")
URL="https://gitlab.com/psmisc/psmisc"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/psmisc-23.7.tar.xz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION
    ./configure --prefix=/usr
    
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make
    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION
    make check
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION
   make DESTDIR= ${BUILD_DATA_ROOT}/usr install


   return 0
}