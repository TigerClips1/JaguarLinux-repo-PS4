# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="gdbm"
VERSION="1.24"
UPSTREAM=1
DESC="The GDBM package contains the GNU Database Manager. It is a library of database functions that uses extensible hashing and works like the standard UNIX dbm. The library provides primitives for storing key/data pairs, searching and retrieving the data by its key and deleting a key along with its data."
GRPS=("core")
URL="https://www.gnu.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")


# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/gdbm-1.24.tar.gz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr    \
            --disable-static \
            --enable-libgdbm-compat
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}
function check() {
    make check
}

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   mkdir -pv  ${BUILD_DATA_ROOT}/usr
   make  DESTDIR=${BUILD_DATA_ROOT}/usr install

    return 0
}
