# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="groff"
VERSION="1.23.0"
UPSTREAM=1
DESC=" The Groff package contains programs for processing and formatting text and images."
GRPS=("core")
URL="https://www.gnu.org/software/groff/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/groff-1.23.0.tar.gz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    PAGE=A4 ./configure --prefix=/usr
    return 0
}


# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make 
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
    make DESTDIR=${BUILD_DATA_ROOT} install
    return 0
}
