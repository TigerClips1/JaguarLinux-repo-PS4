# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="m4"
VERSION="1.4.19"
UPSTREAM=1
DESC="The M4 package contains a macro processor."
GRPS=("core")
URL="https://www.gnu.org/software/m4/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/m4-1.4.19.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make
    
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
    return 0
} 

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make DESTDIR=${BUILD_DATA_ROOT} install
   return 0
}
