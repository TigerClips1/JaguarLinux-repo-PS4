# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="diffutils"
VERSION="3.10"
UPSTREAM=1
DESC="The Diffutils package contains programs that show the differences between files or directories."
GRPS=("core")
URL="https://www.gnu.org/software/diffutils/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/diffutils-3.10.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr
    return 0
}


# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make 
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
    make DESTDIR=${BUILD_DATA_ROOT} install
    return 0
}
