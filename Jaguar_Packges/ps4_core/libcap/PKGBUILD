# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="libcap"
VERSION="2.70"
UPSTREAM=1
DESC="The Libcap package implements the userspace interface to the POSIX 1003.1e capabilities available in Linux kernels. These capabilities partition the all-powerful root privilege into a set of distinct privileges."
GRPS=("core")
URL="https://github.com/mhiramat/libcap"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/libcap-2.70.tar.xz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION
    sed -i '/install -m.*STA/d' libcap/Makefiles
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make prefix=/usr lib=lib

    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION
    make test
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION
   make prefix=${BUILD_DATA_ROOT} lib=lib install

   return 0
}
