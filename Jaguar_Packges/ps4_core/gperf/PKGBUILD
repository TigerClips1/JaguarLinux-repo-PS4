# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="gperf"
VERSION="3.1"
UPSTREAM=1
DESC="Gperf generates a perfect hash function from a key set."
GRPS=("core")
URL="https://www.gnu.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")


# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/gperf-3.1.tar.gz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr --docdir=/usr/share/doc/gperf-3.1
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}
function check() {
    make -j1 check
}

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   mkdir -pv  ${BUILD_DATA_ROOT}/usr
   make  DESTDIR=${BUILD_DATA_ROOT}/usr install

    return 0
}
