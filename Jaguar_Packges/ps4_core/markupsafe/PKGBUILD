# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="markupsafe"
VERSION="2.1.5"
UPSTREAM=1
DESC=" MarkupSafe is a Python module that implements an XML/HTML/XHTML Markup safe string."
GRPS=("core")
URL="https://github.com/pallets/markupsafe/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/MarkupSafe-2.1.5.tar.gz")


# Prepare script
function prepare() {
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    pip3 wheel -w dist --no-cache-dir --no-build-isolation --no-deps $PWD

    return 0
}
function check() {
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   mkdir -pv ${BUILD_DATA_ROOT}/usr
   pip3 install --target ${BUILD_DATA_ROOT}/usr --no-index --no-user --find-links dist Markupsafe
   return 0
}
