# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="lz4"
VERSION="1.10.0"
UPSTREAM=1
DESC="Lz4 is a lossless compression algorithm, providing compression speed greater than 500 MB/s per core. It features an extremely fast decoder, with speed in multiple GB/s per core. Lz4 can work with Zstandard to allow both algorithms to compress data faster."
GRPS=("core")
URL="https://lz4.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/lz4-1.10.0.tar.gz")


# Prepare script
function prepare() {
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
   make BUILD_STATIC=no PREFIX=/usr
    
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make -j1 check
    return 0
} 

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make BUILD_STATIC=no PREFIX=${BUILD_DATA_ROOT}/usr install
   return 0
}
