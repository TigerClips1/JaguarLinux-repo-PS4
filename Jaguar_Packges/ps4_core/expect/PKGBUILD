# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="expect"
VERSION="5.45.4"
UPSTREAM=1
DESC="The Expect package contains tools for automating, via scripted dialogues, interactive applications such as telnet, ftp, passwd, fsck, rlogin, and tip. Expect is also useful for testing these same applications as well as easing all sorts of tasks that are prohibitively difficult with anything else. The DejaGnu framework is written in Expect."
GRPS=("core")
URL="https://core.tcl-lang.org/expect/index"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/expect5.45.4.tar.gz"
     "http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/expect-5.45.4-gcc14-1.patch"
    )


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION/unix
    python3 -c 'from pty import spawn; spawn(["echo", "ok"])'
    patch -Np1 -i ../expect-5.45.4-gcc14-1.patch
    ./configure --prefix=/usr           \
            --with-tcl=/usr/lib     \
            --enable-shared         \
            --disable-rpath         \
            --mandir=/usr/share/man \
            --with-tclinclude=/usr/include


    
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION/unix
    make

    
    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION/unix
    make test
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION/unix

   make DESTDIR=${BUILD_DATA_ROOT}/usr install
   ln -svf expect5.45.4/libexpect5.45.4.so ${BUILD_DATA_ROOT}/usr/libs

   return 0
}
