# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="inetutils"
VERSION="2.5"
UPSTREAM=1
DESC="The Inetutils package contains programs for basic networking."
GRPS=("core")
URL="https://www.gnu.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")


# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/inetutils-2.5.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    sed -i 's/def HAVE_TERMCAP_TGETENT/ 1/' telnet/telnet.c
    ./configure --prefix=/usr        \
            --bindir=/usr/bin    \
            --localstatedir=/var \
            --disable-logger     \
            --disable-whois      \
            --disable-rcp        \
            --disable-rexec      \
            --disable-rlogin     \
            --disable-rsh        \
            --disable-servers
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}
function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make  check
    return 0
}

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make  DESTDIR=${BUILD_DATA_ROOT}/usr install
   mv -v ${BUILD_DATA_ROOT}/usr/{,s}bin/ifconfig

    return 0
}
