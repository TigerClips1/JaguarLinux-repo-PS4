# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="nano"
VERSION="8.1"
UPSTREAM=1
DESC=" The Nano package contains a small, simple text editor which aims to replace Pico, the default editor in the Pine package."
GRPS=("core")
URL="https://www.nano-editor.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("https://www.nano-editor.org/dist/v8/nano-8.1.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --enable-utf8     \
            --docdir=/usr/share/doc/nano-8.1 &&
    return 0
}


# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make
    return 0
}

function check() {
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
    make DESTDIR=${BUILD_DATA_ROOT} install
    install -v -m644 doc/{nano.html,sample.nanorc} ${BUILD_DATA_ROOT}/usr/share/doc/nano-8.1
    return 0
}
