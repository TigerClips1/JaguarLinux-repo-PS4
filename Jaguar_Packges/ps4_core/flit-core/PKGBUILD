# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="fit-core"
VERSION="3.9.0"
UPSTREAM=1
DESC="Flit-core is the distribution-building parts of Flit (a packaging tool for simple Python modules)."
GRPS=("core")
URL="https://github.com/pypa/flit"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/flit_core-3.9.0.tar.gz")


# Prepare script
function prepare() {    
    return 0
}

function check() {
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    pip3 wheel -w dist --no-cache-dir --no-build-isolation --no-deps $PWD

    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   mkdir -pv ${BUILD_DATA_ROOT}/usr
   pip3 install  --target ${BUILD_DATA_ROOT}/usr --no-index --no-user --find-links dist flit_core

    return 0
}
