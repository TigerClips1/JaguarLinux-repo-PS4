# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="jinja2"
VERSION="3.1.4"
UPSTREAM=1
DESC="Jinja2 is a Python module that implements a simple pythonic template language."
GRPS=("core")
URL="https://jinja.palletsprojects.com/en/3.1.x/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/jinja2-3.1.4.tar.gz")


# Prepare script
function prepare() {
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    python -m build --wheel --no-isolation

    return 0
}
function check() {
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   mkdir -pv ${BUILD_DATA_ROOT}/usr
    python -m installer -d "${BUILD_DATA_ROOT}/usr" dist/*.whl

   return 0
}
