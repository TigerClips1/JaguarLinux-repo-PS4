# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="texinfo"
VERSION="7.1"
UPSTREAM=1
DESC=" The Texinfo package contains programs for reading, writing, and converting info pages."
GRPS=("core")
URL="https://www.gnu.org"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/texinfo-7.1.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}
function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make  DESTDIR=${BUILD_DATA_ROOT} install
   make TEXMF=${BUILD_DATA_ROOT}/usr/share/texmf install-tex
    pushd /usr/share/info
        rm -v dir
        for f in *
            do install-info $f dir 2>/dev/null
        done
    popd

    return 0
}
