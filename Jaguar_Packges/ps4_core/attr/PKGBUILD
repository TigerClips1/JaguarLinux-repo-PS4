# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="attr"
VERSION="2.5.2"
UPSTREAM=1
DESC=" The Attr package contains utilities to administer the extended attributes of filesystem objects. "
GRPS=("core")
URL="https://savannah.nongnu.org/projects/attr"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/attr-2.5.2.tar.gz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION

    ./configure --prefix=/usr    \
        --disable-static \
        --docdir=/usr/share/doc/mpc-1.3.1
    
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make 

    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION
    make check
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION

   make DESTDIR=${BUILD_DATA_ROOT} install

   return 0
}
