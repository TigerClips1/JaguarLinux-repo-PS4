# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="sed"
VERSION="4.9"
UPSTREAM=1
DESC="The Sed package contains a stream editor."
GRPS=("core")
URL="https://www.gnu.org"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/sed-4.9.tar.xz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION
    ./configure --prefix=/usr
    
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make
    make html

    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION
    make check
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION
   make DESTDIR= ${BUILD_DATA_ROOT} install
   install -d -m755           ${BUILD_DATA_ROOT}/usr/share/doc/sed-4.9
   install -m644 doc/sed.html ${BUILD_DATA_ROOT}/usr/share/doc/sed-4.9

   return 0
}