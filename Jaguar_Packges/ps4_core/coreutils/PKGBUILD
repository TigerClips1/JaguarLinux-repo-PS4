# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="coreutils"
VERSION="9.5"
UPSTREAM=1
DESC="The Coreutils package contains the basic utility programs needed by every operating system."
GRPS=("core")
URL="https://www.gnu.org/software/coreutils/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/coreutils-9.5.tar.xz"
     "http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/coreutils-9.5-i18n-2.patch"
    )


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    patch -Np1 -i ../coreutils-9.5-i18n-2.patch
    autoreconf -fiv
    FORCE_UNSAFE_CONFIGURE=1 ./configure \
                --prefix=/usr            \
                --enable-no-install-program=kill,uptime
    return 0
}


# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make 
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make NON_ROOT_USERNAME=$USER check-root
    groupadd -g 102 dummy -U $USER
    chown -R $USER . 
   make -k "RUN_EXPENSIVE_TESTS=yes check" \
   < /dev/null
   groupdel dummy
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
    mkdir -pv  ${BUILD_DATA_ROOT}/usr/bin
    mkdir -pv  ${BUILD_DATA_ROOT}/usr/share
    make  DESTDIR=${BUILD_DATA_ROOT}/usr install
    mv -v /usr/bin/chroot ${BUILD_DATA_ROOT}/usr/sbin
    mv -v /usr/share/man/man1/chroot.1 ${BUILD_DATA_ROOT}/usr/share/man/man8/chroot.8
    sed -i 's/"1"/"8"/' ${BUILD_DATA_ROOT}/usr/share/man/man8/chroot.8
    return 0
}
