# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="libtool"
VERSION="2.4.7"
UPSTREAM=1
DESC=" The Libtool package contains the GNU generic library support script. It makes the use of shared libraries simpler with a consistent, portable interface."
GRPS=("core")
URL="https://www.gnu.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")


# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/libtool-2.4.7.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}
function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make -k  check
}

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make  DESTDIR=${BUILD_DATA_ROOT} install
   rm -fv ${BUILD_DATA_ROOT}/usr/lib/libltdl.a

    return 0
}
