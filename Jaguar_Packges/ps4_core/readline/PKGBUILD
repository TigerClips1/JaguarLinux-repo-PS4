# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="readline"
VERSION="8.2.13"
UPSTREAM=1
DESC="The Readline package is a set of libraries that offer command-line editing and history capabilities."
GRPS=("core")
URL="https://tiswww.case.edu/php/chet/readline/rltop.html"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/readline-8.2.13.tar.gz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    sed -i '/MV.*old/d' Makefile.in
    sed -i '/{OLDSUFF}/c:' support/shlib-install
    sed -i 's/-Wl,-rpath,[^ ]*//' support/shobj-conf
    ./configure --prefix=/usr    \
            --disable-static \
            --with-curses    \
            --docdir=/usr/share/doc/readline-8.2.13
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make SHLIB_LIBS="-lncursesw"
    
    return 0
}

function check() {
    return 0
} 

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make  SHLIB_LIBS="-lncursesw" DESTDIR=${BUILD_DATA_ROOT} install
   install -v -m644 doc/*.{ps,pdf,html,dvi} ${BUILD_DATA_ROOT}/usr/share/doc/readline-8.2.13
   return 0
}
