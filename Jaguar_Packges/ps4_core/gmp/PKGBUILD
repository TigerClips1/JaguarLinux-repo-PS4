# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="gmp"
VERSION="6.3.0"
UPSTREAM=1
DESC="The GMP package contains math libraries. These have useful functions for arbitrary precision arithmetic."
GRPS=("core")
URL="https://gmplib.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/gmp-6.3.0.tar.xz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION
   ./configure --prefix=/usr    \
            --enable-cxx     \
            --disable-static \
            --docdir=/usr/share/doc/gmp-6.3.0
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSIO
    make 
    make html

    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION
    make check 2>&1 | tee gmp-check-log
    awk '/# PASS:/{total+=$3} ; END{print total}' gmp-check-log
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION

   make DESTDIR=${BUILD_DATA_ROOT} install
   make DESTDIR=${BUILD_DATA_ROOT} install html

   return 0
}
