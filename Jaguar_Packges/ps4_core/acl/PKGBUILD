# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="acl"
VERSION="2.3.2"
UPSTREAM=1
DESC="The Acl package contains utilities to administer Access Control Lists, which are used to define fine-grained discretionary access rights for files and directories."
GRPS=("core")
URL="https://savannah.nongnu.org/projects/acl"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/acl-2.3.2.tar.xz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION

    ./configure --prefix=/usr         \
        --disable-static      \
        --docdir=/usr/share/doc/acl-2.3.2
    
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make 

    return 0
}

function check() {
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION

   make DESTDIR=${BUILD_DATA_ROOT}/usr install

   return 0
}
