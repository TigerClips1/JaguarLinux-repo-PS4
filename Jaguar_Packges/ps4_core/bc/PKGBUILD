# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="bc"
VERSION="6.7.6"
UPSTREAM=1
DESC="The Bc package contains an arbitrary precision numeric processing language."
GRPS=("core")
URL="https://www.gnu.org"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/bc-6.7.6.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    CC=gcc ./configure --prefix=/usr -G -O3 -r
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make
    
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make test
    return 0
} 

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make DESTDIR=${BUILD_DATA_ROOT} install
   return 0
}
