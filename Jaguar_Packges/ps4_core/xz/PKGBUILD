# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="xz"
VERSION="5.6.2"
UPSTREAM=1
DESC="The Xz package contains programs for compressing and decompressing files. It provides capabilities for the lzma and the newer xz compression formats. Compressing text files with xz yields a better compression percentage than with the traditional gzip or bzip2 commands."
GRPS=("core")
URL="https://tukaani.org/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/xz-5.6.2.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/xz-5.6.2
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make 
    
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
    return 0
} 

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make  DESTDIR=${BUILD_DATA_ROOT} install
   return 0
}
