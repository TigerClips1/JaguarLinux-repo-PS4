# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="mpc"
VERSION="1.3.1"
UPSTREAM=1
DESC="The MPC package contains a library for the arithmetic of complex numbers with arbitrarily high precision and correct rounding of the result."
GRPS=("core")
URL="https://www.musicpd.org/clients/mpc/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/mpc-1.3.1.tar.gz")


# Prepare script
function prepare() {
    cd $WORKDIR/$NAME-$VERSION

    ./configure --prefix=/usr    \
        --disable-static \
        --docdir=/usr/share/doc/mpc-1.3.1
    
    return 0
}

# Build script
function build() {
    cd $WORKDIR/$NAME-$VERSION
    make 
    make html

    return 0
}

function check() {
    cd $WORKDIR/$NAME-$VERSION
    make check
    return 0
} 

# Post build script
function postbuild() {
   cd $WORKDIR/$NAME-$VERSION

   make DESTDIR=${BUILD_DATA_ROOT} install
   make DESTDIR=${BUILD_DATA_ROOT} install html

   return 0
}
