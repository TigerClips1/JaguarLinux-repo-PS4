# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="automake"
VERSION="1.17"
UPSTREAM=1
DESC="The Automake package contains programs for generating Makefiles for use with Autoconf."
GRPS=("core")
URL="https://www.gnu.org/software/automake/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/automake-1.17.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    ./configure --prefix=/usr --docdir=/usr/share/doc/automake-1.17
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}

function check() {
    make check
}

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   mkdir -pv  ${BUILD_DATA_ROOT}/usr
   make  DESTDIR=${BUILD_DATA_ROOT}/usr install

    return 0
}
