# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="tar"
VERSION="1.35"
UPSTREAM=1
DESC="The Tar package provides the ability to create tar archives as well as perform various other kinds of archive manipulation. Tar can be used on previously created archives to extract files, to store additional files, or to update or list files which were already stored."
GRPS=("core")
URL="https://www.gnu.org/software/tar/"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/tar-1.35.tar.xz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    FORCE_UNSAFE_CONFIGURE=1  \
    ./configure --prefix=/usr
    return 0
}


# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"
    make
    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
    return 0
}


# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
    make DESTDIR=${BUILD_DATA_ROOT}/usr install
    make -C doc install-html docdir=${BUILD_DATA_ROOT}/usr/share/doc/tar-1.35

    return 0
}
