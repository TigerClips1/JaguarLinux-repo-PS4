# Package Maintainers
MAINTAINERS=("TigerClips1 <tigerclips1@ps4repo.site>")

# Package information
NAME="intltool"
VERSION="0.51.0"
UPSTREAM=1
DESC="The Intltool is an internationalization tool used for extracting translatable strings from source files."
GRPS=("core")
URL="https://launchpad.net/intltool"
LICENSES=("GPL")
DEPENDS=("ps4_core")

# Source information
SRC=("http://ftp.lfs-matrix.net/pub/lfs/lfs-packages/12.2/intltool-0.51.0.tar.gz")


# Prepare script
function prepare() {
    cd "$WORKDIR/$NAME-$VERSION"
    sed -i 's:\\\${:\\\$\\{:' intltool-update.in
    ./configure --prefix=/usr
    
    return 0
}

# Build script
function build() {
    cd "$WORKDIR/$NAME-$VERSION"

    make

    return 0
}

function check() {
    cd "$WORKDIR/$NAME-$VERSION"
    make check
    return 0
}

# Post build script
function postbuild() {
   cd "$WORKDIR/$NAME-$VERSION"
   make  DESTDIR=${BUILD_DATA_ROOT}/usr install
   install -v -Dm644 doc/I18N-HOWTO ${BUILD_DATA_ROOT}/usr/share/doc/intltool-0.51.0/I18N-HOWTO

    return 0
}
